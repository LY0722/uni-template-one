
.home-wrap {
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  background: #EFEFEF;
  display: block;
}
.horn-icon {
  color: #333;
  line-height: 40rpx;
}
.grace-content {
  font-size: 25rpx;
  color: #666;
  line-height: 40rpx;
}
.grace-swiper-msg {
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
  padding: 10rpx 0 10rpx 12rpx;
  height: 50rpx;
  width: 100%;
  background: #FAFAFA;
}
.grace-swiper-msg-icon {
  width: 50rpx;
  margin-right: 20rpx;
}
.grace-swiper-msg-icon image {
  width: 100%;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
}
.grace-swiper-msg swiper {
  width: 100%;
  height: 50rpx;
}
.grace-swiper-msg swiper-item {
  line-height: 50rpx;
}
.broadcast-wrap {
  display: block;
  width: 100%;
  height: 300rpx;
}
.broadcast-row {
  height: 300rpx;
}
.broadcast-img {
  width: 100%;
  height: 300rpx;
}
.search-wrap {
  padding: 18rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
}
.search-icon {
  font-size: 34rpx;
  color: #C8C7CC;
  margin-right: 10rpx;
}
.search-text {
  font-size: 33rpx;
  color: #C8C7CC;
}
.search-row {
  height: 70rpx;
  line-height: 70rpx;
  display: block;
  width: 100%;
  background: #fff;
  border-radius: 5rpx;
}
.product-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  background: #fff;
}
.product {
  padding: 10rpx 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.image-view {
  height: 330rpx;
  width: 330rpx;
}
.product-image {
  height: 330rpx;
  width: 330rpx;
}
.product-title {
  width: 300rpx;
  font-size: 32rpx;
  word-break: break-all;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.product-price {
  font-size: 28rpx;
  position: relative;
}
.product-price-original {
  color: #e80080;
}
.product-price-favour {
  color: #888888;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.product-tip {
  position: absolute;
  right: 10rpx;
  background-color: #ff3333;
  color: #ffffff;
  padding: 0 10rpx;
  border-radius: 5rpx;
}