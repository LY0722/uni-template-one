
.shopp-car-wrap {
  min-height: 100vh;
  background: #EFEFEF;
}
.shop-footer {
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: block;
}
.shop-footer-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background: #fff;
}
.settlement-btn {
  background: #FF0871;
  color: #fff;
  border-radius: 0;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  width: 140rpx;
}
.total {
  position: absolute;
  top: 4rpx;
  right: 150rpx;
  font-size: 30rpx;
  color: #6F6F6F;
}
.details {
  position: absolute;
  right: 150rpx;
  font-size: 25rpx;
  color: #888888;
}
.checkbox-icon {
  margin-left: 20rpx;
}
checkbox .wx-checkbox-input {
  border-radius: 50%;
  height: 26rpx;
  width: 26rpx;
  margin-top: -4rpx;
  border: 1rpx solid #D1D1D1;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 22rpx;
  color: #C8C7CC;
  background: #C8C7CC;
}
.money {
  color: #FF0000;
}
.shop-car-no-ord {
  width: 100%;
  text-align: center;
  padding: 10rpx;
  color: #C8C7CC;
  font-size: 30rpx;
}